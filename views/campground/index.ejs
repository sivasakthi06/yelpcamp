<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
    <h1>CAMPGROUND LISTS</h1>
    
    <ul>
        <% for(let campground of campgrounds){ %> 
            <div class="card mb-3">
                <div class="row ">
                    <div class="col-md-4">
                       <!--  if condition for if url undefined error occured its helps to solve -->
                        <% if(campground.images.length) { %> 
                        <img class="img-fluid" src="<%=campground.images[0].url%>" alt="">
                        <% } else { %>
                            <img class="img-fluid" src="https://res.cloudinary.com/appinessyelpcamp/image/upload/v1624800885/YelpCamp/fv9xzj5zdabietefzdof.jpg" alt="">  
                            <%}%>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h2 class="card-title"><%=campground.name%></h2>
                            
                            <p class="card-text"><%=campground.describtion%></p>
                            <p class="card-text">
                                <small class="text-muted"><%=campground.location%></small>
                              
                            </p>
                            <a href="/campground/<%=campground.id%>" class="btn btn-primary">view <%=campground.name%></a>
                        </div>
                    </div>
                </div>
            </div>
        <!-- <li><a href="/campground/<%= campground._id %>"><%= campground.name %></a></li> -->
        <% } %>
    </ul>

